<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Mevcut İzinler -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- ==================== ABONELIK SISTEMI İÇİN YENİ İZİNLER ==================== -->
    <!-- Internet permission (AdMob ve In-App Purchase için gerekli) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Network state (Reklam optimizasyonu için) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Billing permission (In-App Purchase için) -->
    <uses-permission android:name="com.android.vending.BILLING" />
    <!-- ============================================================================ -->

    <!-- ==================== FIREBASE CLOUD MESSAGING İZİNLERİ ==================== -->
    <!-- FCM için gerekli izinler -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- ============================================================================ -->
    
    <application
        android:label="rua_new"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            
            <!-- ⚡ HIGH REFRESH RATE SUPPORT (90Hz, 120Hz) -->
            <!-- Android will use the device's maximum refresh rate -->
            <!-- This ensures FPS = Screen Hz (60/90/120 FPS) -->
            <meta-data
                android:name="android.view.Display.preferHighRefreshRate"
                android:value="true" />
            
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <!-- ==================== FCM NOTIFICATION CLICK ==================== -->
            <!-- Bildirime tıklandığında uygulamayı aç -->
            <intent-filter>
                <action android:name="FLUTTER_NOTIFICATION_CLICK" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <!-- ================================================================ -->
        </activity>
        
        <!-- Don't delete the meta-data below.
             This is used by the Flutter tool to generate GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

            <!--  sonradan eklendi --> 
        <property
            android:name="android.adservices.AD_SERVICES_CONFIG"
            android:resource="@xml/gma_ad_services_config"
            tools:replace="android:resource" />
        <!-- ==================== ADMOB CONFIGURATION ==================== -->
        <!-- AdMob App ID -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8382186556433873~1782125268"/>
        <!-- 
        ⚠️ ÖNEMLI: Yukarıdaki TEST ID'dir! 
        Production'a geçerken kendi AdMob App ID'nizi yazın!
        Test ID: ca-app-pub-3940256099942544~3347511713
        Gerçek ID formatı: ca-app-pub-XXXXXXXXXXXXXXXX~YYYYYYYYYY
        
        AdMob App ID'nizi bulmak için:
        1. https://apps.admob.google.com adresine gidin
        2. Uygulamanızı seçin
        3. App settings > App ID
        -->
        <!-- ============================================================= -->
        
    </application>
    
    <!-- Required to query activities that can process text, see:
         https://developer.android.com/training/package-visibility and
         https://developer.android.com/reference/android/content/Intent#ACTION_PROCESS_TEXT.
         
         In particular, this is used by the Flutter engine in io.flutter.plugin.text.ProcessTextPlugin. -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
        
        <!-- ==================== BILLING QUERY ==================== -->
        <!-- Google Play Store için (In-App Purchase) -->
        <intent>
            <action android:name="com.android.vending.billing.InAppBillingService.BIND" />
        </intent>
        <!-- ======================================================= -->
    </queries>
</manifest>