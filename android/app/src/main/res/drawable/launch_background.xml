<?xml version="1.0" encoding="utf-8"?>
<!-- Optimized native splash screen with gradient background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background matching app theme -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1A1A2E"
                android:centerColor="#0F3460"
                android:endColor="#533483"
                android:type="linear" />
        </shape>
    </item>

    <!-- App icon in center (optional - uncomment if you have a launch icon) -->
    <!-- <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />
    </item> -->
</layer-list>
